        <p>Tropical</p>
      </button>
      <button type="submit" name="category" value="Adapted" class="filter-item btn">
        <i class="fa-solid fa-wheelchair-move"></i>
        <p>Adapted</p>
      </button>
      <button type="submit" name="category" value="Houseboats" class="filter-item btn">
        <i class="fa-solid fa-ship"></i>
        <p>Houseboats</p>
      </button>
      <button type="submit" name="category" value="Arctic" class="filter-item btn">
        <i class="fa-regular fa-snowflake"></i>
        <p>Arctic</p>
      </button>
      <button type="submit" name="category" value="Igloo" class="filter-item btn">
        <i class="fa-solid fa-igloo"></i>
        <p>Igloo</p>
      </button>
    </form>

  </div>

  <button class="scroll-btn rounded-circle px-2" onclick="scrollFilters(1)">
    <i class="fa-solid fa-chevron-right"></i>
  </button>
</div>

<script>
  // scrolling of filters
  function scrollFilters(direction) {
    const filters = document.querySelector('.filters');
    const scrollAmount = 200;
    filters.scrollLeft += direction * scrollAmount;
  }
</script>