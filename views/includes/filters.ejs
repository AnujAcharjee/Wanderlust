      <button type="submit" name="category" value="Camping" class="filter-item btn">
        <i class="fa-solid fa-campground"></i>
        <p>Camping</p>
      </button>
      <button type="submit" name="category" value="Iconic Cities" class="filter-item btn">
        <i class="fa-solid fa-city"></i>
        <p>Iconic Cities</p>
      </button>
      <button type="submit" name="category" value="Mountains" class="filter-item btn">
        <i class="fa-solid fa-mountain-sun"></i>
        <p>Mountains</p>
      </button>
      <button type="submit" name="category" value="Castles" class="filter-item btn">
        <i class="fa-brands fa-fort-awesome"></i>
        <p>Castles</p>
      </button>
      <button type="submit" name="category" value="Trending" class="filter-item btn">
        <i class="fa-solid fa-fire"></i>
        <p>Trending</p>
      </button>
      <button type="submit" name="category" value="Luxe" class="filter-item btn">
        <i class="fa-solid fa-gem"></i>
        <p>Luxe</p>
      </button>
      <button type="submit" name="category" value="Farms" class="filter-item btn">
        <i class="fa-solid fa-tractor"></i>
        <p>Farms</p>
      </button>
      <button type="submit" name="category" value="Ski-in/out" class="filter-item btn">
        <i class="fa-solid fa-person-skiing"></i>
        <p>Ski-in/out</p>
      </button>
      <button type="submit" name="category" value="Beach" class="filter-item btn">
        <i class="fa-solid fa-umbrella-beach"></i>
        <p>Beach</p>
      </button>
      <button type="submit" name="category" value="Tower" class="filter-item btn">
        <i class="fa-solid fa-tower-observation"></i>
        <p>Tower</p>
      </button>
      <button type="submit" name="category" value="Creative" class="filter-item btn">
        <i class="fa-solid fa-palette"></i>
        <p>Creative</p>
      </button>
      <button type="submit" name="category" value="Tropical" class="filter-item btn">
