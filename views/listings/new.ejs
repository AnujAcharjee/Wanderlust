<%- layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-8 offset-2">
    <br>
    <h3>Create a new list</h3>
    <br>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input name="listing[title]" type="text" placeholder="enter title" class="form-control" required>
        <div class="valid-feedback">Great title!</div>
      </div>
      <br><br>
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" placeholder="enter description" class="form-control" required>
                    </textarea>
        <div class="invalid-feedback">Please enter short description</div>
      </div>
      <br><br>
      <div class="mb-3">
        <label for="image" class="form-label">Upload image</label>
        <input name="listing[image]" type="file" class="form-control">
        <div class="invalid-feedback">Please enter valid image url</div>
      </div>
      <br><br>
      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input name="listing[price]" type="number" placeholder="enter price in number" class="form-control" required>
        <div class="invalid-feedback">Please enter valid price</div>
      </div>
      <br><br>
      <div class="row">
        <div class="mb-3 col-md-4">
          <label for="location" class="form-label">Location</label>
          <input name="listing[location]" type="text" placeholder="city, state" class="form-control" required>
          <div class="invalid-feedback">Please enter valid location</div>
        </div>
        <br><br>
        <div class="mb-3 col-md-7">
          <label for="country" class="form-label">Country</label>
          <input name="listing[country]" type="text" placeholder="enter country name" class="form-control" required>
          <div class="invalid-feedback">Please enter valid country name</div>
        </div>
      </div>

      <br><br>
      <button class="btn btn-dark add-btn">Add</button>
      <br><br>

    </form>

  </div>
</div>